{
  "name": "Gift-card reminder",
  "description": "An extension that reminds you of your gift-cards.",
  "version": "1.2",
  "manifest_version": 3,
  "action": {
    "default_popup": "index.html",
    "default_icon": "icons/gcr_LOGO_ico_128.png"
  },
  "icons": {
    "16": "icons/ico_16.png",
    "32": "icons/ico_32.png",
    "48": "icons/ico_48.png",
    "128": "icons/gcr_LOGO_ico_128.png"
  },
  "permissions": [
    "storage"
  ],
  "content_scripts": [
    {
      "js": ["scripts/watcher.js"],
      "matches": ["<all_urls>"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "assets/insert_style.css",
        "gcr_LOGO_ico.png"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
